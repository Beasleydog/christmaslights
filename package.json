{
  "name": "christmaslights",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "appId": "com.christmaslights",
    "productName": "ChristmasLights",
    "win": {
      "target": [
        "portable"
      ],
      "sign": false,
      "signingHashAlgorithms": null,
      "certificateFile": null,
      "certificatePassword": null,
      "publisherName": [
        "samschneider"
      ]
    },
    "portable": {
      "artifactName": "ChristmasLights.exe"
    },
    "asar": false,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    }
  },
  "author": "samschneider",
  "license": "ISC",
  "description": "Christmas Lights Display with Control GUI",
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-fuses": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^28.1.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ChristmasLights",
            "authors": "samschneider",
            "setupIcon": "./logo.ico",
            "setupExe": "ChristmasLights Setup.exe",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
          }
        }
      ]
    }
  }
}
